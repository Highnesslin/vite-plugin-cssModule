{
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es2019",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}